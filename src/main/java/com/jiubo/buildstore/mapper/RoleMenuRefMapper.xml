<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiubo.buildstore.dao.RoleMenuRefDao">

    <select id="getRMRByCondition" resultType="com.jiubo.buildstore.bean.RoleMenuRefBean">
        select * from role_menu_ref
        <where>
            1=1
            <if test="roleMenuRefBean.roleIdList != null and roleMenuRefBean.roleIdList.size() > 0">
                and ROLE_ID in
                <foreach collection="roleMenuRefBean.roleIdList" open="(" close=")" separator="," item="item">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>
</mapper>
