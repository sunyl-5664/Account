<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiubo.buildstore.dao.RoleDao">
    <select id="getRoleByIdList" resultType="com.jiubo.buildstore.bean.RoleBean">
        select * from role
        <where>
            1=1
            <if test="roleBean.idList != null and roleBean.idList.size() >0">
               and ID in
                <foreach collection="roleBean.idList" open="(" close=")" separator="," item="item">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>
</mapper>
